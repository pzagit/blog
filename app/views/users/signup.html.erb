<h1>Let's get started</h1>
<%= form_for :user, url: users_path do |f| %>
	<p>
		<%= f.label :username %><br>
		<%= f.text_field(:username, {:class => 'form-control new-input'}) %>
	</p>
	<p>
		<%= f.label :email %><br>
		<%= f.text_field(:email, {:class => 'form-control new-input input-lg'}) %>
	</p>
	<p>
		<%= f.label :password %><br>
		<%= f.text_field(:password_digest, {:class => 'form-control new-input input-lg'}) %>
	</p>
	<br>
	<p>
		<%= f.submit({:class => 'btn btn-primary'}) %>
	</p>
<% end %>