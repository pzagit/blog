<h1>Let's get started</h1>
<%= form_for :user, url: users_path do |f| %>
<div class='well '>
	<% if @user.errors.any? %>
		<% @user.errors.full_messages.each do |msg| %>
			<div class='alert alert-danger'><%= msg %></div>
		<% end %>
	<% end %>
	<p>
		<%= f.label :username %><br>
		<%= f.text_field(:username, {:class => 'form-control new-input '}) %>
	</p>
	<p>
		<%= f.label :email %><br>
		<%= f.text_field(:email, {:class => 'form-control new-input '}) %>
	</p>
	<p>
		<%= f.label :password %><br>
		<%= f.password_field(:password, {:class => 'form-control new-input '}) %>
	</p>
	<br>
	<p>
		<%= f.submit('Sign up', {:class => 'btn btn-primary'}) %>
	</p>
</div>
<% end %>